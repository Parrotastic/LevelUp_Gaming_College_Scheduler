<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lukavalentine.databaseapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DatabaseApp">


        <activity android:name=".UI.TermActivity"
            android:label="Levels"
            android:parentActivityName=".UI.MainActivity"/>

        <activity android:name=".UI.TermEdit"
            android:label="Edit Level"
            android:parentActivityName=".UI.TermActivity" />


        <activity android:name=".UI.CourseActivity"
            android:label="Courses"
            android:parentActivityName=".UI.MainActivity"
            />
        <activity android:name=".UI.TermAdd"
            android:label="Add Level"/>
        <activity android:name=".UI.CourseAdd"
            android:label="Add Course" />
        <activity android:name=".UI.CourseEdit"
            android:label="Edit Course"/>
        <activity android:name=".UI.AssessmentAdd"
            android:label="Add Trial"/>
        <activity android:name=".UI.AssessmentEdit"
            android:label="Edit Trial"/>
        <activity android:name=".UI.SearchActivity"
            android:label="Search Courses"/>

        <activity
            android:name=".UI.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
        </activity>
        <receiver android:name=".UI.MyReceiver"/>
    </application>

</manifest>